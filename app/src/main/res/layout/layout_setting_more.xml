<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <include
        android:id="@+id/layout_title"
        layout="@layout/titlebar_common"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/selecter_white_round_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_improve_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingTop="@dimen/size_15"
            android:text="@string/setting_more_perfect"
            android:drawableRight="@drawable/setting_arrow"
            android:textColor="@color/hei222"
            android:textSize="@dimen/font_medium" />

        <View
            android:id="@+id/tv_div"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />

        <!-- *********************************************************************************************** -->

        <TextView
            android:id="@+id/tv_modify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingTop="@dimen/size_15"
            android:text="@string/setting_more_pw_modify"
            android:drawableRight="@drawable/setting_arrow"
            android:textColor="@color/hei222"
            android:textSize="@dimen/font_medium" />

        <View
            android:id="@+id/tv_fenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />
        <!-- *********************************************************************************************** -->
        <!-- *********************************************************************************************** -->
        <!-- *********************************************************************************************** -->
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_6"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_15"
            android:paddingTop="@dimen/size_15"
            android:text="@string/setting_more_react"
            android:drawableRight="@drawable/setting_arrow"
            android:textColor="@color/hei222"
            android:textSize="@dimen/font_medium" />

        <View
            android:id="@+id/tv_fenge3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />
        <!-- *********************************************************************************************** -->
        <RelativeLayout
            android:id="@+id/rl_current_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_6"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:text="@string/setting_more_version"
                android:textColor="@color/hei222"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_banben_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:text="@string/setting_more_version"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAlphaBlack_77"
                android:textSize="@dimen/font_medium" />

        </RelativeLayout>

        <View
            android:id="@+id/tv_fenge9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />
        <!-- *********************************************************************************************** -->
        <RelativeLayout
            android:id="@+id/rl_disturb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_6"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:text="消息免打扰"
                android:textColor="@color/hei222"
                android:textSize="@dimen/font_medium" />

            <CheckBox
                android:id="@+id/ck_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_centerVertical="true"
                style="@style/disturb_check_box_style"
                />

        </RelativeLayout>

        <View
            android:id="@+id/tv_fenge2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />
        <!-- *********************************************************************************************** -->
        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_6"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:text="检查更新"
                android:textColor="@color/hei222"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_tv_update_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAlphaBlack_77"
                android:textSize="@dimen/font_medium" />

        </RelativeLayout>
        <!-- *********************************************************************************************** -->

    </LinearLayout>

    <TextView
        android:id="@+id/tv_quit"
        android:layout_below="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/size_6"
        android:gravity="center"
        android:paddingBottom="@dimen/size_15"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingTop="@dimen/size_15"
        android:text="@string/setting_more_exit1"
        android:background="@drawable/selecter_red_round_5"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium" />

</RelativeLayout>    

