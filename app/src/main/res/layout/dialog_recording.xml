<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_record_voice"
    >
    
    <TextView 
        android:layout_width="@dimen/height_200"
        android:layout_height="@dimen/height_200"
        android:gravity="center_vertical"
        android:id="@+id/tv"
        />
    
    <ImageView 
        android:id="@+id/image"
        android:layout_width="@dimen/height_100"
        android:layout_height="@dimen/height_100"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_recording"
        />
    
    <TextView 
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/font_16"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingTop="@dimen/size_5"
        android:paddingBottom="@dimen/size_5"
        android:background="@drawable/shape_corner_maincolor_white"
        android:layout_alignBottom="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_10"
        />

</RelativeLayout>
    