<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >
    <include
        android:id="@+id/layout_title"
        layout="@layout/titlebar_common"
        />
    <ImageView 
        android:id="@+id/image"
        android:layout_below="@id/layout_title"
        android:layout_width="@dimen/height_80"
        android:layout_height="@dimen/height_80"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_login"
        android:layout_marginTop="@dimen/margin_30"
        />

    <TextView
        android:id="@+id/login_account"
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30"
        android:text="@string/login_account"
        android:textColor="#0e7888"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="@dimen/margin_15"
        />
    <!--  android:inputType="number" -->
    <EditText 
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/selector_hollow_transport_dcdcdc"
        android:layout_below="@+id/login_account"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:textSize="@dimen/font_medium"
        android:textColor="#999999"
        android:hint="@string/login_account_hint"
        android:paddingLeft="@dimen/size_10"
        android:drawablePadding="@dimen/size_10"
        android:drawableLeft="@drawable/login_username"
        />

    <TextView
        android:id="@+id/login_password"
        android:layout_below="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30"
        android:text="@string/login_password"
        android:textColor="#0e7888"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="@dimen/margin_15"
        />
    
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/selector_hollow_transport_dcdcdc"
        android:layout_below="@+id/login_password"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:hint="@string/login_password_hint"
        android:textSize="@dimen/font_medium"
        android:textColor="#999999"
		android:paddingLeft="@dimen/size_8"
        android:drawablePadding="@dimen/size_10"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/login_password"
        
        />
    
    <Button 
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/selector_hollow_transport_0e7b7b"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="@dimen/size_30"
        android:layout_centerHorizontal="true"
        android:textColor="#0e7b7b"
        android:textSize="@dimen/font_20"
        android:gravity="center"
        android:text="@string/login"
        android:layout_marginLeft="@dimen/margin_100"
        android:layout_marginRight="@dimen/margin_100"
        />
    
    
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_45"
        android:layout_marginRight="@dimen/margin_45"
        android:layout_below="@+id/btn_submit"
        android:layout_marginTop="@dimen/margin_25"
        >
        <ImageView
            android:id="@+id/img_left"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:background="@drawable/login_left"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <TextView 
            android:id="@+id/tv_signup"
            android:layout_toRightOf="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="#088080"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_centerVertical="true"
            android:text="注册帐号"
            />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:background="@drawable/login_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_findpassword"
            android:layout_toLeftOf="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="#088080"
            android:layout_marginRight="@dimen/size_5"
            android:text="找回密码"
            android:layout_centerVertical="true"
            />        
        
    </RelativeLayout>

</RelativeLayout>    

