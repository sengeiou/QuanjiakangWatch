<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="@dimen/height_300"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="@dimen/height_300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_27"
        android:layout_marginRight="@dimen/margin_27"
        android:background="@drawable/bg_dialog_selector"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_marginBottom="@dimen/size_15"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/font_color_333333"
            android:text="输入计划名称"
            android:textSize="@dimen/font_20" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="支持输入4个汉字或8个英文"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/font_color_999999"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_18"
                android:padding="@dimen/size_15"
                android:gravity="center"
                android:textColorHint="@color/font_color_999999"
                android:background="@drawable/selecter_hollow_transport_dcdcdc_round2"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            >

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/height_120"
                android:layout_height="@dimen/height_40"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/font_16"
                android:background="@drawable/selecter_hollow_transport_dcdcdc_round2"
                />

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/height_120"
                android:layout_height="@dimen/height_40"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/font_16"
                android:textColor="@color/font_color_0e7b7b"
                android:background="@drawable/selector_btn_bac_green"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>