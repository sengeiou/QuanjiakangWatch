<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eef3f6">

    <include
        android:id="@+id/layout_title"
        layout="@layout/titlebar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height"
        android:visibility="visible" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/state_img"
            android:layout_width="@dimen/height_200"
            android:layout_height="@dimen/height_200"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/state_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/state_img"
            android:layout_marginTop="@dimen/size_10"
            android:textSize="@dimen/font_16"
            android:textColor="@color/font_color_333333"
            android:text="恭喜,您的申请已通过!"
            />

        <TextView
            android:id="@+id/state_hint_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/state_hint"
            android:layout_marginTop="@dimen/size_5"
            android:textSize="@dimen/font_12"
            android:textColor="@color/font_color_999999"
            android:text="恭喜,您的申请已通过!"
            />

        <TextView
            android:id="@+id/state_btn"
            android:layout_width="@dimen/height_130"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/state_hint"
            android:layout_marginTop="@dimen/size_10"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_00b2b2"
            android:text="点击进入"
            android:gravity="center"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:background="@drawable/selecter_bind_state_btn"
            />
    </RelativeLayout>
</RelativeLayout>

