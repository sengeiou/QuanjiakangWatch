<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/margin_10"
    android:paddingTop="@dimen/margin_10"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下午:16:00"
            android:textSize="@dimen/font_10"
            android:textColor="@color/font_color_CCCCCC"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_issue_ask"
            android:text="问"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:layout_marginLeft="@dimen/size_17"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_6"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/size_6"
            android:paddingTop="@dimen/size_4"
            android:paddingBottom="@dimen/size_4"
            android:text=""
            android:textColor="@color/font_color_999999"
            android:lineSpacingExtra="@dimen/size_5"
            android:textSize="@dimen/font_14"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/voice_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/voice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_issue_ask"
            android:text="问"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:layout_marginLeft="@dimen/size_17"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_6"
            android:gravity="center"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/voice_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/voice_type"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_issue_voice"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/voice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/voice_type"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_gravity="center_vertical"
            android:background="@drawable/iocn_issue_voice"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/voice_bg"
            android:layout_centerVertical="true"
            android:textColor="@color/font_color_999999"
            android:textSize="@dimen/font_14"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_issue_ask"
            android:text="问"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:layout_marginLeft="@dimen/size_17"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_6"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_type"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>