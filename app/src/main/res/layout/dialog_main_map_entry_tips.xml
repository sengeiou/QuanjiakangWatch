<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="@dimen/height_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="@dimen/height_300"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_tips_dialog"
        android:orientation="vertical">
        <!-- *******************************   标题以及推出图标   ************************************************** -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_90"
                android:text="温馨提示"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_20" />

            <RelativeLayout
                android:id="@+id/exit"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/size_6"
                android:layout_marginTop="@dimen/height_35">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/crop__ic_cancel"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <!-- ********************************************************************************* -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="您暂未绑定手表设备,立即前往绑定全家康手表设备"
                android:textColor="@color/font_color_666666"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
        <!-- ********************************************************************************* -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_confirm"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="@dimen/size_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_status"
                android:layout_width="@dimen/height_20"
                android:layout_height="@dimen/height_20"
                android:layout_alignLeft="@id/btn_confirm"
                android:background="@drawable/selector_map_entry_dialog"
                android:button="@null"
                android:checked="false"
                android:padding="@dimen/size_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_toRightOf="@id/check_status"
                android:gravity="center_vertical"
                android:text="不再提醒"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
        <!-- ********************************************************************************* -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_18">

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_bind_confirm"
                android:gravity="center"
                android:text="立即绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>