<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/info_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_13"
        android:layout_marginLeft="@dimen/size_17"
        android:layout_marginRight="@dimen/size_17"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/height_145"
            android:layout_height="@dimen/height_113"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_1"
            />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_16"
            android:text="图片描述:"
            android:layout_marginLeft="@dimen/size_7"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/image"
            />

        <TextView
            android:id="@+id/intro_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qianhei"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/introduce"
            android:textSize="@dimen/font_12"
            android:text="荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾荡漾"
            android:layout_marginLeft="@dimen/size_7"
            android:layout_marginTop="@dimen/size_11"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hei"
        android:textSize="@dimen/font_10"
        android:text="发布时间：2016-10-11  20:00"
        android:layout_below="@id/info_line"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/size_17"
        />
    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:layout_below="@+id/time"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/divider_d1d1d1"
        />

</RelativeLayout>